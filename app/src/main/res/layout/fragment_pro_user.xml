<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ContainerScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ContainerScreen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/ContainerProfilePic"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                    android:transitionName="ivPic" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentPrimary"
                android:transitionName="username" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvRubros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNumberReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:numStars="5"
                    android:transitionName="ratingBar"
                    app:srb_drawBorderEnabled="false"
                    app:srb_isIndicator="true"
                    app:srb_numberOfStars="5"
                    app:srb_starBackgroundColor="@color/semi_transparent"
                    app:srb_starCornerRadius="3"
                    app:srb_starSize="30dp" />

                <ImageButton
                    android:id="@+id/btnShowContactInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_show_contact_info" />

                <TextView
                    android:id="@+id/tvHrAtencion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivInsigniaAtencion"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/atencion_insignia_24dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivInsigniaTiempoResp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/time_resp_insignia_24dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivInsigniaCalidad"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/quality_insignia_24dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ContainerScreen1">

            <LinearLayout
                android:id="@+id/ContainerSocialMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnInstagram"
                    style="@style/SocialButton"
                    android:src="@drawable/social_instagram_icon" />

                <ImageView
                    android:id="@+id/btnFacebook"
                    style="@style/SocialButton"
                    android:src="@drawable/social_facebook_icon" />

                <ImageView
                    android:id="@+id/btnWhatsapp"
                    style="@style/SocialButton"
                    android:src="@drawable/social_whatsapp_icon" />

                <ImageView
                    android:id="@+id/btnMail"
                    style="@style/SocialButton"
                    android:src="@drawable/social_email_icon" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/map" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnShowReviews"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/main_buttons"
                    android:drawableStart="@drawable/comment"
                    android:padding="8dp"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/btnCV"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/main_buttons"
                    android:src="@drawable/curriculum" />

                <ImageButton
                    android:id="@+id/btnMoreInfo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/main_buttons"
                    android:src="@drawable/ic_info_black_24dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/personalControls"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/top_inner_shadow">

            <TextView
                android:id="@+id/eliminarCuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_close_black_24dp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="@string/eliminar_cuenta"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="@string/cerrar_sesi_n"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
