<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="alertDialogTheme">@style/alertDialogs</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/startup_splash_screen</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="checkBoxStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="NoCaps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="loadingScreen">
        <item name="colorControlActivated">@color/colorAccentPrimary</item>
    </style>

    <style name="alertDialogs" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/colorAccentPrimary</item>
        <item name="colorControlHighlight">@color/colorAccentPrimary</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="android:background">@drawable/alertdialog_background</item>
    </style>

    <style name="button">
        <item name="android:layout_margin">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SocialButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="descTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="editText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="normalButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="tvconfigurator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>