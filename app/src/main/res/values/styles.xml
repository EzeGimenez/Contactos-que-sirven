<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="alertDialogTheme">@style/alertDialogs</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccentPrimary</item>
        <item name="colorControlActivated">@color/colorAccentPrimary</item>
        <item name="colorControlHighlight">@color/colorAccentPrimaryDark</item>
    </style>

    <style name="alertDialogs" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/colorAccentPrimary</item>
        <item name="colorControlActivated">@color/colorAccentPrimary</item>
        <item name="colorControlHighlight">@color/colorAccentPrimary</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="android:background">@drawable/alertdialog_background</item>

    </style>

    <style name="SocialButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="descTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccentPrimary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="editText">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="normalButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>