<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/filledStar</item>
    </style>

    <style name="MainButtons">
        <item name="android:background">@drawable/main_buttons_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SubRubroButtons">
        <item name="android:background">@drawable/sub_rubro_buttons_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon
        <item name="searchIcon">@drawable/ic_search</item>-->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/colorPrimary</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_view_hint</item>
    </style>


</resources>