<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/filledStar</item>
    </style>

    <style name="MainButtons">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/main_buttons_background</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="SubRubroButtons">
        <item name="android:background">@drawable/sub_rubro_buttons_background</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/searchview_background</item>
        <item name="queryHint">@string/search_view_hint</item>
    </style>
</resources>